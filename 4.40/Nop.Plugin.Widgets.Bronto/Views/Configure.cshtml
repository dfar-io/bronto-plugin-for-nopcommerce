@model ConfigurationModel

@using Nop.Plugin.Widgets.Bronto.Models

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="Bronto" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ScriptManagerCode" />
                    </div>
                    <div class="col-md-9">
                        <nop-textarea asp-for="ScriptManagerCode" />
                        <span asp-validation-for="ScriptManagerCode"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="DirectAddListId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DirectAddListId" />
                        <span asp-validation-for="DirectAddListId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>